-javascript 'user_function'

.main
  %h1
    =_('Functions')
  =render :partial => "filter"

  -if @user_functions.empty? 
    -if params[:filter]
      %h2
        %i
          =_("No results were found")
  -else
    %div{ :style=>"float:right;"}
      = will_paginate @user_functions, :params => {:filter => params[:filter] }
    =render :partial => "functions", :locals => {:user_functions => @user_functions, :can_move => @can_move, :paginate => true}

//Tools menu
-content_for :tools_menu do
  =link_to image_tag("/images/icons/filter.png",:alt=>"filter.png",:title=>_('Filter')),  "/user_functions"

