.login{:style=>"margin:3% 23%;"}
  .volver
    =link_to _('Back'), "/sessions/new"
  %h1{:style=>"width:300px; margin-top:0px;"}
    =_("Fill with your personal data")
  .registration{:style=>"margin-top: 10px;margin-bottom:10px;"}
    = error_messages_for :user
    - form_for :user, :url => users_path, :html=>{:style=>"margin:0 30%;"} do |f|
      %label{:for => "login"} 
        =_("User")
      = f.text_field :login
      %label{:for => "name"}
        =_("Full Name")
      = f.text_field :name
      %label{:for => "email"}
        Email
      = f.text_field :email
      %label{:for => "password"} 
        =_("Password")
      = f.password_field :password
      %label{ :for => "password_confirmation"} 
        =_("Confirm Password")
      = f.password_field :password_confirmation
      %label{ :for => "language"}
        =_('Languange:')
      = select("user","language",[[_("English"),"en_US"],[_("Spanish"),"es"],[_("Portuguese"),"pt"]], {:selected =>:language})
      %p
      .form_button{:style=>"margin:0;"}
        = submit_tag _('Register')
      %br
    %div{ :style=>"clear: both"}




