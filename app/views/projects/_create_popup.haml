.tag{ :id => "create", :style=>"left: 40%; height:320px; width:225px; display:none;"}
  =render :partial =>"layouts/popup_header", :locals=>{:element =>"create"}  

  %div{:style=>"left: 30%; height:30%; width:70%;"}
    .div_abm{:style=>"color:#0B610B;"}
      %img{ :src => "/images/icons/add3.png",  :style=>"cursor:pointer;"}
      =_('Create Project')
      -form_for(:project, :url => projects_path, :html => { :method => :post, :style =>" border: 3px ridge #0B610B;" }) do |f|
        %label{:for => "name"}
          =_('Name')
        = f.text_field :name
        %label{:for => "description"}
          =_('Description')
        = f.text_field :description
        - if @is_root
          %label
            =_('Manager')
          %select{:id => "project_user_id", :name=>"project[user_id]"}
            -@users.sort.each do |user|
              %option{ :value => user.id}
                =user.login
        %br
        %br
        =submit_tag _('Create'), :style=>"cursor:pointer;"
  