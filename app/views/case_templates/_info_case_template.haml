//CASE TEMPLATE
.info{:id=>"infoCaseTemplate", :style=>"display:none;"}
  =render :partial =>"layouts/popup_header", :locals=>{:element =>"infoCaseTemplate"} 
  .infoData
    %h2{:style=>"text-align:center;"}
      %b
        =_('Case')
      %p{:style=>"text-align:center;"}
        =_('Is a Data Set for a test case associated with a script')
        %br
        =_('You can edit the cases by double click on the field to modify.')


    %h3
      %img{:src => "/images/icons/new.png", :alt=>"new.png"}
      =_('New Case')
    %p
      =_('It add a row to the data set')

    %h3
      %img{:src => "/images/icons/column.png", :alt=>"column.png"}
      =_('Column')
    %p
      =_('Allows insert or delete columns in data set')

    %h3
      %img{:src => "/images/icons/trash.png", :alt=>"trash.png"}
      =_('Delete Case')
    %p
      =_('Delete the selected case. Also be removed:')
      %br
      =_('-Execution History.')
      %br
      =_('-Suite Relations')

    %h3
      %img{:src => "/images/icons/clock.png", :alt=>"clock.png"}
      =_('History')
    %p
      =_('Displays the history of execution from the selected case.')

    %h3
      %img{:src => "/images/icons/eimport.png", :alt=>"eimport.png"}
      =_('Import')
    %p
      =_('Import data set from Excel')

    %h3
      %img{:src => "/images/icons/eexport.png", :alt=>"eexport.png"}
      =_('Export')
    %p
      =_('Export data set to Excel')

    %h3
      %img{:src => "/images/icons/files.png", :alt=>"files.png"}
      =_('Files')
    %p
      =_("The added file, can be accessed from any script of the project using the File class in Ruby. For more information:")
      %b
        =link_to "File Class", "http://www.ruby-doc.org/core/classes/File.html" , :popup => true


    %h3
      %img{:src => "/images/icons/config.png", :alt=>"config.png"}
      =_('Execution Panel')
    %p
      =_('You can set different parameters, such as Explorer.')
      %br
      =_('Cacique stores last settings used by user.')
      %br

    %h3
      %img{:src => "/images/icons/play.png", :alt=>"play.png"}
      =_('Run')
    %p
      =_('Run selected cases')
      %br
      %i
        =_('It will run as configured in ')
        %img{:src => "/images/icons/config.png", :alt=>"config.png"}

    %h3
      %img{:src => "/images/icons/queue.png", :alt=>"queue"}
      =_('Queued Task')
    %p
      =_('Shows the number of waiting Executions in the system')

    %h3
      %img{:src => "/images/icons/ok_1.png", :alt=>"show.png"}
      =('-')
      %img{:src => "/images/icons/waiting_1.png", :alt=>"show.png"}
      =('-')
      %img{:src => "/images/icons/fail_1.png", :alt=>"show.png"}
      =_('Result.')
    %p
      =_('These icons show the Execution Result.')

   
